<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/linear_selector"
    android:padding="5dip" >

    <ImageView
        android:id="@+id/item_custom_imgv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/offwall_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐应用渠道一号线"
            android:textColor="#149CF3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/offwall_item_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="点击进入应用列表"
            android:textColor="#555"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>